	True()
THEN
	RESPONSE #100
	SetGlobal("D5_WEPX","GLOBAL",0)
	SetGlobal("D5_ARCHER","GLOBAL",0)
	SetGlobal("D5_MELEE","GLOBAL",0)
	SetNumTimesTalkedTo(0)
	DestroySelf()               // reset global variables, then destroy self
END
